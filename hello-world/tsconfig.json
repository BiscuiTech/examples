{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "rootDir": "api",
    "noEmit": true,
    "typeRoots": ["node_modules/@types", "types"],
    "plugins": [
      { "name": "nexus/typescript-language-service" },
      { "name": "ts-graphql-plugin", "schema": "api.graphql", "tag": "gql" }
    ]
  },
  "include": ["api", "types.d.ts"]
}
